# üåê Nova TON Monitor - Environment Configuration
# Copy this file to .env and modify the values as needed

# ================================
# üéØ SERVER CONFIGURATION
# ================================
# Change these values to update server URL everywhere
SERVER_PROTOCOL=http
SERVER_HOST=95.181.212.120
SERVER_PORT=5001

# ================================
# üîê API CONFIGURATION
# ================================
API_HOST=0.0.0.0
API_PORT=5001
API_DEBUG=false
API_SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY_HOURS=24

# ================================
# üåç CORS CONFIGURATION
# ================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://your-vercel-app.vercel.app

# ================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ================================
USE_SQLITE=true
SQLITE_PATH=./data/NovaTonMonitor.db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nova_ton_monitor
DB_USER=nova_user
DB_PASSWORD=your_db_password_here

# ================================
# ‚õìÔ∏è TON BLOCKCHAIN CONFIGURATION
# ================================
TON_NETWORK=mainnet
TON_API_KEY=your_ton_api_key_here
TON_MAINNET_ENDPOINT=https://toncenter.com/api/v2/jsonRPC
TON_TESTNET_ENDPOINT=https://testnet.toncenter.com/api/v2/jsonRPC

# ================================
# üìä MONITORING CONFIGURATION
# ================================
MONITOR_CHECK_INTERVAL=30
LOG_LEVEL=INFO
ENABLE_RATE_LIMITING=true
API_RATE_LIMIT=100 per minute

# ================================
# üîî NOTIFICATIONS (OPTIONAL)
# ================================
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
ALERT_WEBHOOK_URL=https://your-webhook-url.com

# ================================
# üõ°Ô∏è SECURITY (PRODUCTION)
# ================================
ENVIRONMENT=production
FORCE_HTTPS=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
ENABLE_API_KEY_AUTH=false
API_KEYS=["key1","key2"]
