# üè≠ Production Environment Template for Nova TON Monitor
# Copy this file to .env.production and fill in the actual values

# Application Configuration
ENVIRONMENT=production
APP_VERSION=1.0.0
BUILD_NUMBER=1

# Database Configuration (PostgreSQL)
USE_SQLITE=false
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nova_ton_monitor
DB_USER=nova_user
DB_PASSWORD=your_secure_database_password_here
DB_SSL_MODE=require
DB_MAX_CONNECTIONS=20
DB_CONNECTION_TIMEOUT=30

# SQLite Fallback (for development)
SQLITE_PATH=./data/NovaTonMonitor.db

# TON Blockchain Configuration
TON_MAINNET_ENDPOINT=https://toncenter.com/api/v2/jsonRPC
TON_TESTNET_ENDPOINT=https://testnet.toncenter.com/api/v2/jsonRPC
TON_API_KEY=your_ton_api_key_here
TON_NETWORK=mainnet
TON_REQUEST_TIMEOUT=30
TON_MAX_RETRIES=3
TON_RETRY_DELAY=5

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=5001
API_DEBUG=false
CORS_ORIGINS=["https://yourdomain.com", "https://app.yourdomain.com"]
API_RATE_LIMIT=100 per minute
API_MAX_CONTENT_LENGTH=1048576
API_SECRET_KEY=your_32_character_secret_key_here
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY_HOURS=24

# Monitoring Configuration
MONITOR_CHECK_INTERVAL=30
MONITOR_MAX_TX_AGE=3600
ALERT_WEBHOOK_URL=https://hooks.slack.com/your/webhook/url
METRICS_PORT=9090
HEALTH_CHECK_PORT=8080

# Telegram Notifications (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=./logs/nova_monitor.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_JSON_FORMAT=true
LOG_INCLUDE_TRACE_ID=true

# Security Configuration
ENABLE_API_KEY_AUTH=false
API_KEYS=["your_api_key_1", "your_api_key_2"]
ENABLE_RATE_LIMITING=true
RATE_LIMIT_STORAGE=redis
SSL_CERT_PATH=/path/to/your/ssl/cert.pem
SSL_KEY_PATH=/path/to/your/ssl/key.pem
FORCE_HTTPS=false
MAX_WALLET_ADDRESS_LENGTH=100
MAX_TELEGRAM_ID_LENGTH=50

# Performance Configuration
ENABLE_CACHING=true
CACHE_TTL=300
CACHE_BACKEND=redis
DB_POOL_SIZE=10
DB_QUERY_TIMEOUT=30
WORKER_PROCESSES=2
MAX_CONCURRENT_REQUESTS=100

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# Monitoring and Alerting
SENTRY_DSN=https://your_sentry_dsn_here
DATADOG_API_KEY=your_datadog_api_key_here

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Frontend Integration
FRONTEND_URL=https://yourdomain.com
